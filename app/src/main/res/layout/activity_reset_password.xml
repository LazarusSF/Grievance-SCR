<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#3333"
    android:orientation="vertical"
    android:padding="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Railway Grievance"
        android:textSize="35dp"
        android:textColor="#ee1972f9"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="casual"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#333">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reset_pwd_enter_pfno"
            android:inputType="number"
            android:textColor="#333"
            android:hint="Enter PF/PPO No."
            />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColorHint="#333"
        app:passwordToggleEnabled="true">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reset_oldpwd_enter_pwd"
            android:inputType="textPassword"
            android:ems="12"
            android:textColor="#333"
            android:hint="Enter Previous Password"
            android:layout_marginTop="40dp"
            />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColorHint="#333"
        app:passwordToggleEnabled="true">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reset_pwd_enter_pwd"
        android:inputType="textPassword"
        android:ems="12"
        android:textColor="#333"
        android:hint="Enter New Password"
        android:layout_marginTop="40dp"
        />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColorHint="#333"
        app:passwordToggleEnabled="true">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reset_pwd_re_enter_pwd"
            android:inputType="textPassword"
            android:ems="12"
            android:textColor="#333"
            android:hint="Re-enter New Password"
            android:layout_marginTop="40dp"
            />
    </android.support.design.widget.TextInputLayout>

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/user_resetpwd_submit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="Submit"
        app:fb_defaultColor="#fcb138"
        app:fb_radius="15dp"
        app:fb_textColor="#0318fd"
        android:layout_marginTop="40dp"
        android:textColor="#FFF" />
    </LinearLayout>
</LinearLayout>