<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#3333"
    android:padding="20dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Railway Grievance"
        android:textSize="35dp"
        android:textColor="#ee1972f9"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/admin_login_view"
        android:textColor="#e47272"
        android:text="Admin Login"
        android:textSize="35dp"
        android:textAlignment="center"
        android:layout_marginTop="17dp" />
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#333"
        android:layout_marginTop="30dp">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adminlogin_username"
        android:inputType="text"
        android:textColor="#333"
        android:hint="Enter Username:"/>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColorHint="#333"
        app:passwordToggleEnabled="true">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/adminlogin_password"
        android:textColor="#333"
        android:inputType="textPassword"
        android:ems="12"
        android:hint="Enter Password:" />
    </android.support.design.widget.TextInputLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        >
        <mehdi.sakout.fancybuttons.FancyButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/forgot_adminlogin"
            android:text=" Forgot Password ?"
            app:fb_textColor="#333"
            app:fb_ghost="true"
            android:layout_alignParentLeft="true"
            android:textAllCaps="false"
            android:onClick="forgotPressed"
            android:textAlignment="center"
            />

        <mehdi.sakout.fancybuttons.FancyButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_adminlogin"
            app:fb_text=" Login "
            android:layout_marginLeft="30dp"
            app:fb_radius="10dp"
            android:padding="15dp"
            app:fb_defaultColor="#fcb138"
            app:fb_textColor="#0318fd"
            android:onClick="loginPressed"
            android:layout_alignParentRight="true"
            android:textAllCaps="false"
            android:textAlignment="center" />


    </RelativeLayout>
        </LinearLayout>

</LinearLayout>