<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#3333"
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Railway Grievance"
        android:textSize="35dp"
        android:textColor="#ee1972f9"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="casual"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColorHint="#333">

                <EditText
                    android:id="@+id/newuser_name_editview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Enter full name.."
                    android:textColor="#333" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#333">

                <EditText
                    android:id="@+id/newuser_pfno_editview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Enter PF/PPO No."
                    android:inputType="number"
                    android:textColor="#333" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#333">

                <EditText
                    android:id="@+id/newuser_designation_editview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Enter designation.."
                    android:textColor="#333" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#333">

                <EditText
                    android:id="@+id/newuser_mobile_editview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:hint="Enter mobile no."
                    android:inputType="phone"
                    android:textColor="#333" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#333"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/newuser_pwd_editview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:hint="Enter password"
                    android:inputType="textPassword"
                    android:textColor="#333" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#333"
                app:passwordToggleEnabled="true">

                <EditText
                    android:id="@+id/newuser_repwd_editview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:hint="Re-Enter password"
                    android:inputType="textPassword"
                    android:textColor="#333" />
            </android.support.design.widget.TextInputLayout>
            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/new_user_register_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:fb_defaultColor="#fcb138"
                app:fb_radius="15dp"
                android:onClick="click_register_new_user"
                android:text="Register"
                app:fb_textColor="#0318fd" />
            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/old_user_login_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingBottom="200dp"
                android:onClick="click_register_new_user"
                android:text="Already a User?\nLOGIN here"
                android:textAllCaps="false"
                app:fb_ghost="true"
                app:fb_textColor="#333" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
